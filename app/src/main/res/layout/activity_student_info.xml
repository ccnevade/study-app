<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.menu.StuInfoActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/username_title"
        android:text="学生名"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/username_value"
        android:layout_width="0dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/username_title"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/account_title"
        android:text="学号"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/username_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/account_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"

        app:layout_constraintLeft_toRightOf="@+id/account_title"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/username_value" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/age_title"
        android:text="年龄"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/account_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/age_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"

        app:layout_constraintLeft_toRightOf="@+id/age_title"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/account_value" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/major_title"
        android:text="专业"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/age_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/major_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"

        app:layout_constraintLeft_toRightOf="@+id/major_title"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/age_value" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/classroom_title"
        android:text="班级"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/major_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/classroom_value"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"

        app:layout_constraintLeft_toRightOf="@+id/major_title"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/major_value" />

    <GridView
        android:id="@+id/menu_gv"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classroom_value" />

</android.support.constraint.ConstraintLayout>