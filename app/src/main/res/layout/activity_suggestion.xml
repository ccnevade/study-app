<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.suggestion.SuggestionActivity">


    <EditText
        android:id="@+id/suggestion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="标题"

        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/suggestion_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:text="请输入你的意见或建议！"
        android:gravity="center"
        android:singleLine="false"
        android:lines="5"

        app:layout_constraintTop_toBottomOf="@+id/suggestion_title"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/suggestion_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="提交"

        app:layout_constraintTop_toBottomOf="@+id/suggestion_et"

       />
</android.support.constraint.ConstraintLayout>