<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.notice.NoticeContentActivity">


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"

        android:gravity="center"


        />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="公告"

        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@+id/title_tv"

        />

    <TextView
        android:id="@+id/publisher_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="发布人"

        android:textAlignment="textEnd"

        app:layout_constraintTop_toBottomOf="@+id/content_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/publisher_date_tv"

        />

    <TextView
        android:id="@+id/publisher_date_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="发布时间"
        android:textAlignment="textEnd"

        app:layout_constraintTop_toBottomOf="@+id/content_tv"
        app:layout_constraintLeft_toRightOf="@+id/publisher_tv"
        app:layout_constraintRight_toRightOf="parent"

        />

</android.support.constraint.ConstraintLayout>